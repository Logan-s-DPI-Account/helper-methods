<div>
  <div>
    <h1>
      Movie #<%= @the_movie.id %> details
    </h1>

    <div>
      <div>
        <%= link_to "Go Back", movies_path %>
       
      </div>

      <div>
        <%= link_to "Edit movie", edit_movie_url(@the_movie) %>
     
      </div>

      <div>
      <%=link_to "delete", movie_path(@the_movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn=primary" %>
      
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @the_movie.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_movie.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_movie.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_movie.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
